<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="match_parent"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:padding="15dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.05"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/gray_60"
        android:text="#1"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_weight="0.08"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/mikael_delta_profile_picture"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:singleLine="true"
            android:textColor="@color/gray_50"
            android:text="testbruker"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/teal_400"
            android:text="2230 poeng"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/missions_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_explore_gray80_18dp"
            android:textColor="@color/gray_70"
            android:text="2"/>

        <TextView
            android:id="@+id/suggestions_posted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lightbulb_gray80_18dp"
            android:textColor="@color/gray_70"
            android:text="3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_forum_gray80_18dp"
            android:textColor="@color/gray_70"
            android:text="5"/>

    </LinearLayout>

</LinearLayout>